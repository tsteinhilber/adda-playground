<div class="row flex-items-xs-middle devise-row">
  <div class="col-sm hidden-xs-down"></div>
  <div class="col-md-5 col-sm-8 col-xs-12">
    <div class="card card-block">
      <h4 class="card-title">Register</h4>

      <!--FORM-->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
            <%= f.label :email %><br />
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
                <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
            <% end %><br />
            <%= f.label :password %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            <%= f.label :password_confirmation %><br />
          </div>

          <div class="form-group">
            <%= f.text_field :name_first, autocomplete: "off", class: "form-control" %>
            <%= f.label "First Name" %><br />
          </div>

          <div class="form-group">
            <%= f.text_field :name_last, autocomplete: "off", class: "form-control" %>
            <%= f.label "Last Name" %><br />
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
      <% end %>
      <hr>
      <%= render "devise/shared/links" %>
    </div><!-- /card -->
  </div>
  <div class="col-sm hidden-xs-down"></div>
</div>