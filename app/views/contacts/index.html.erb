<div class="row">
  <div class="col-sm-6 col-xs-12">
    <h2 class="display-4">Contact <small class="text-muted lead"><%= @contacts.all.size if @contacts %></small></h2>
  </div>
  <div class="col-sm-6 col-xs-12 text-sm-right">
    <%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary' %>
  </div>
</div>

<!--SEARCH FORM-->
<div class="row">
  <div class="col-sm-12">
    <%= form_tag contacts_path, :method => 'get' do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search Contacts' %>
          <span class="input-group-btn">
        <%= submit_tag "Search", class: 'btn btn-outline-secondary' %>
      </span>
        </div>
    <% end %>
  </div>
</div>

<hr/>

<!--SEARCH RESULTS-->
<% if @contacts && @contacts.all.size > 0 %>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name_full %></td>
        <td><%= contact.title %></td>
        <td><%= contact.email %></td>
        <td><%= contact.slug %></td>
        <td><%= link_to 'Show', contact_path(contact) %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
